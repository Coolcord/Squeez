<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="csci567.squeez"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/squeez"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" android:logo="@drawable/squeez">
        <activity
            android:name="csci567.squeez.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="FileViewer" android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
    </application>

</manifest>
